<resources>

    <style name="Base.Theme.Spatz" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/spatz_red_600</item>
        <item name="colorPrimaryDark">@color/spatz_red_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/spatz_teal_700</item>
        <item name="colorSecondaryVariant">@color/spatz_teal_800</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- system bar color. -->
        <item name="android:navigationBarColor">@color/nav_bar</item>
        <item name="android:statusBarColor">@color/immersive_sys_ui</item>

        <!-- component styles -->
        <item name="appBarLayoutStyle">@style/Widget.Spatz.AppBarLayout</item>
    </style>

    <style name="Theme.Spatz" parent="Base.Theme.Spatz" />
</resources>
